<div class="row">
	<div class="col l6">
		<%=  image_tag @content.cover.url , class: "responsive-img show-img" %>
	</div>

	<div class="col l6">
		<h1 class="show-titolo">
			<%= @content.titolo %>
		</h1>

		<p>
			<%= @content.user.name %>
		</p>

		<p>
			<%= @content.descrizione %>
		</p>

		<p class="show-prezzo">
			<%= number_to_currency(@content.price) %>
		</p>

		<% if current_user %>

		<%= form_tag compra_path(slug: @content.slug) do %>
		<script
			src="https://checkout.stripe.com/checkout.js" class="stripe-button"
			data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
			data-amount="<%= @content.price %>"
			data-name="Dellanna"
			data-description="<%= @content.titolo %>"
			data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
			data-locale="auto"
			data-email="<%= current_user.email %>"
			data-zip-code="true"
			data-currency="eur">
		</script>
		<% end %>

		<% else %>
		<p> Fai 
	      <%= link_to "Log In", new_user_session_path %> oppure 
	      <%= link_to "Registrazione", new_user_registration_path %>
	    </p>
		<% end %>
</div>
</div>


<% if @content.user == current_user %>
<%= link_to 'Modifica', edit_content_path(@content) %> |
<% end %>
<%= link_to 'Torna ai contenuti', contents_path %>